<div class="wrapper">
  {{#if user}}
  <div class="profile">
    
    <label> Welcome <span>{{user.username}}</span></label>
    <img src="https://image.flaticon.com/icons/svg/3089/3089855.svg"class="avatar">
    <ul>
      <li>
      <a href="/recipes/create">Create a new recipe</a>
      </li>
      {{#if user.isSuperuser}}
      <li>
        <a href="/products/feedDb">Feed products DB</a>
      </li>
      {{/if}}
      <li>
      {{#if myRecipes}}
        <a href="/profile/my-recipes">My recipes</a>
      {{/if}}
      </li>
      <li>
      <a href="/profile/favorite-recipes">My favorite recipes</a>
      </li>
    {{else}}
      <p>You need to <a href="/login">login</a> to see your profile page. </p>
    {{/if}}
  </ul>
  </div>
</div>