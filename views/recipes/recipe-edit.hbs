<form id="create-recipe-form" class="create-form" action="/recipes/edit/{{recipe._id}}" method="POST">
  <h2>Edit a recipe</h2>
  <div class="input-container">
    <label for="name">Name:</label>
    <input type="text" id="name" name="name" placeholder="Ex: Pasta Bolognese" value="{{recipe.name}}">
  </div>

  <div class="input-container">
    <label for="img">Image:</label>
    <input type="text" id="img" name="image" placeholder="Image URL" value="{{recipe.image}}">
  </div>

  <div class="time-container">
    <label for="time">Cooking time</label>
    <input type="number" id="time" name="time" placeholder="--" value="{{recipe.time}}">
    <label>minutes</label>
  </div>

  <div id="info-min-products">
    <label>Minimum two products to create a recipe</label>
  </div>

  <div class="list-container">
    <div>
      <label style="">Ingredients</label><span>Quantity</span>
    </div>
    <ul id="ingredients-list">
      {{#each recipe.products}}
        <li>
          {{!-- <span>{{product.name}}</span>     <span>{{quantity}}</span>g --}}
          <span>{{product.name}}</span>     <span>{{quantity}}</span> g  <button class="delete-product__button"></button><span style="display:none">{{product.id}}</span>
        </li>
      {{/each}}
    </ul>
  </div>
  <div class="add-product-container">
    <div class="input-container">
      <select id="products" name="products">
        {{#each products}}
          <option value="{{_id}}">{{this.name}}</option>
        {{/each}}
      </select>
    </div>
    <div class="quant-grams">
      <input type="number" id="quantity" name="quantity" placeholder="-" min=0>
      <label>gr</label>
    </div>
  </div>
  <button class="add-product__button" id="new-ingredient">+</button>
  <div class="input-container">
    <label for="steps">Steps:</label>
    <textarea id="steps" name="steps" rows="10" cols="30" value="{{recipe.steps}}">
      Describe the steps here
    </textarea>
  </div>

  <div id="list-to-send">
    {{!-- Will be filled dynamically with JS --}}
  </div>

  <input type="hidden" name="recipeId" value="{{recipe._id}}">

  <button class="button-in-form create" type="submit" id="create-recipe-button">Save changes</button>

</form>


{{#if errorMessage}}
  <div>
      <p>{{errorMessage}}</p>
  </div>   
{{/if}}
