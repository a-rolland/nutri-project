<h2>Recipes</h2>
<div id="search-results" class="wrapper">
  <input type="text" id="search-item" placeholder="Search a recipe..">
  {{#each recipes}}
    {{> cards parameter1="recipes" parameter2=_id parameter3=image parameter4=name }}
    <form action="/recipes/addFavorite" method="POST"><button name="favorite" value="{{_id}}">Add to favorites</button></form>
  {{/each}}
  {{#if user}}
    <a href=""></a>
    <a
      href="/recipes/create"
      class="create-recipe__button"
    > 
      <div>
        <img src="/images/add-icon.svg">
      </div>
    </a>
  {{/if}}
</div>

