<form id="create-recipe-form" class="create-form" action="/recipes/create" method="POST">
  <h2>Create a recipe</h2>
  <div class="input-container">
    <label for="name">Name:</label>
    <input type="text" id="name" name="name" placeholder="Ex: Pasta Bolognese">
  </div>

  <div class="input-container">
    <label for="img">Image:</label>
    <input type="text" id="img" name="image" placeholder="Image URL">
  </div>
  
  <div class="time-container">
    <label for="time">Cooking time</label>
    <input type="number" id="time" name="time" placeholder="15">
    <label>minutes</label>
  </div>

  <div class="list-container">
    <div>
      <label style="">Ingredients</label><span>Quantity</span>
    </div>
    <ul id="ingredients-list">
    </ul>
  </div>
  <div class="add-product-container">
    <div class="input-container">
      <select id="products" name="products">
        {{#each products}}
          <option value="{{_id}}">{{this.name}}</option>
        {{/each}}
      </select>
    </div>
    <div class="quant-grams">
      <input type="number" id="quantity" name="quantity" placeholder="100" min=0>
      <label>gr</label>
    </div>

  </div>
  <button class="add-product__button" id="new-ingredient">+</button>
  <div class="input-container">
    <label for="steps">Steps:</label>
    <textarea id="steps" name="steps" rows="10" cols="30">
      Describe the steps here
    </textarea>
  </div>
  <div id="list-to-send">
    {{!-- Will be filled dynamically with JS --}}
  </div>

  <button class="button-in-form create" type="submit" id="create-recipe-button" disabled>Create recipe</button><br>
</form>

{{#if errorMessage}}
  <div>
      <p>{{errorMessage}}</p>
  </div>   
{{/if}}