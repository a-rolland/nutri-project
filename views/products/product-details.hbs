<div class="card-wrapper">
  <div class="details-info" id="product-info">
    <div class="details-img">
      <img class="img-big" id="img-big-product" src="{{product.image}}" width="400px" height="auto" alt="Product picture"> 
    </div>
    <div class="details-description">
      <h2>{{product.name}}</h2>
      <h3>Description: {{product.description}}</h3>
      <h3>Season: {{product.seasons}}</h3>
      <h3>Nutrition facts (for 100g)</h3>
      <h3>Calories: {{product.info.calories}}</h3>
      <h3>Fat: {{product.info.fat}}g</h3>
      <h3>Carbs: {{product.info.carbs}}g</h3>
      <h3>Proteins: {{product.info.proteins}}g</h3>
    </div>
  </div>
  {{#if user.isSuperuser}}
      <a class="button delete" href="/products/delete/{{product.name}}">DELETE</a>
  {{/if}}
  {{#if relatedRecipes}}
    <div id="details-recipes">
      <h2>Find this product in these recipes</h2>
      {{#each relatedRecipes}}
      <div class="details-description">
        <a href="/recipes/details/{{_id}}"><img src="{{image}}" width="100px" height="auto" alt="Recipe containing this product"></a>
        <span>{{name}}</span>
      </div>
      {{/each}}
    </div>
  {{/if}}
</div>
